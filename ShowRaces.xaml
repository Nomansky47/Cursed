<Page x:Class="Cursed.ShowRaces"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cursed"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowRaces"  IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <DataGrid x:Name="RaceGrid" AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding FlightID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}"></DataGridTextColumn>
                <DataGridTextColumn Header="Аиропорт" Binding="{Binding AirportID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Тип самолета" Binding="{Binding AircraftID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Путь" Binding="{Binding Destination}"></DataGridTextColumn>
                <DataGridTextColumn Header="Депарчт тайм" Binding="{Binding Departure_Time}"></DataGridTextColumn>
                <DataGridTextColumn Header="Время прибытия" Binding="{Binding Arrival_Time}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
