<Page x:Class="Cursed.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cursed"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid Background="Gray" >
        <TextBox Background="LightGray" HorizontalAlignment="Left" Height="46" Margin="182,180,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="328" x:Name="Password" Grid.Row="1"/>
        <TextBox Background="LightGray" HorizontalAlignment="Left" Height="46" Margin="182,89,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="328" x:Name="Login" Grid.Row="1"/>
        <Button Background="LightGray" Content="Вход" HorizontalAlignment="Left"  Margin="543,188,0,0" VerticalAlignment="Top"  Click="Enter"/>
        <Button Background="LightGray" Content="Регистрация" HorizontalAlignment="Left" Margin="543,97,0,0" VerticalAlignment="Top"  Click="Register"/>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Height="50" Margin="0,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="434" Grid.Row="1"><Run Language="ru-ru" Text="Авторизация"/></TextBlock>
    </Grid>
</Page>
