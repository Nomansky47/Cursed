<Window x:Class="Cursed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cursed"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Gray">
    <Grid>
        <TextBox Background="LightGray" HorizontalAlignment="Left" Height="46" Margin="182,244,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="328" x:Name="Password"/>
        <TextBox Background="LightGray" HorizontalAlignment="Left" Height="46" Margin="182,153,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="328" x:Name="Login"/>
        <Button Background="LightGray" Content="Вход" HorizontalAlignment="Left" Height="46" Margin="543,244,0,0" VerticalAlignment="Top" Width="73" Click="Enter"/>
        <Button Background="LightGray" Content="Регистрация&#xD;&#xA;" HorizontalAlignment="Left" Height="46" Margin="543,153,0,0" VerticalAlignment="Top" Width="73" Click="Registration"/>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Height="60" Margin="0,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="434"><Run Language="ru-ru" Text="Авторизация"/></TextBlock>
    </Grid>
</Window>
